<div class="row">
    <div class="col-lg-12 col-md-12 col-12">
        <!-- Page header -->
        <div class="mb-8 d-md-flex justify-content-between align-items-center">
            <div>
                <h1 class="mb-3 h2">Project Grid</h1>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-action="AddOrUpdate" asp-controller="Home">Home</a></li>
                        <li class="breadcrumb-item"><a asp-action="AddOrUpdate" asp-controller="Role">Role</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Grid</li>
                    </ol>
                </nav>
            </div>
            <div>
                <a asp-action="AddOrUpdate" asp-controller="Role" class="btn btn-dark d-md-flex align-items-center gap-2"> Create new Role</a>
            </div>
        </div>
    </div>
</div>
<div class="row g-6 mb-6">
    <div class="">
        <!-- card -->
        <div class="card card-lg">
            <!-- card header -->
            <div class="card-header border-bottom-0">
                <div class="row g-4">
                    <div class="col-lg-4">
                        <input type="search" class="form-control" placeholder="Search" id="searchInput">
                    </div>
                    <div class="col-lg-8 d-flex justify-content-end">
                        <div class="d-flex align-items-center gap-2">
                            <div>
                                <button type="button" class="btn btn-primary" id="searchBtn">Search</button>
                            </div>
                            <div class="dropdown" id="isActiveDropdown">
                                <a class="btn btn-white dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">Category</a>

                                <ul class="dropdown-menu">
                                    <li><span class="dropdown-item" data-active="true">Active</span></li>
                                    <li><span class="dropdown-item" data-active="false">Deactive</span></li>
                                </ul>
                            </div>
                            <div>
                                <button type="button" class="btn btn-white" id="referenceBtn">Reference</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- table -->
            <div class="table-responsive">
                <table class="table text-nowrap mb-0 table-centered table-hover" id="roleTbl">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Description</th>
                            <th>CreatedAt</th>
                            <th>IsActive</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>

</div>

@section Scripts {
 <script>
        var table;
        var activeFilter = null;

        $(document).ready(function () {

            table = $('#roleTbl').DataTable({
                processing: true,
                serverSide: true,
                filter: false,
                ajax: {
                    url: '@Url.Action("GetAllRoles", "Role")',
                    type: "POST",
                    contentType: "application/json; charset=utf-8",
                    data: function (d) {
                         d.Search = { value: $("#searchInput").val(), regex: false };
                         d.IsActive = activeFilter;
                        return JSON.stringify(d);
                    }
                },
                columns: [
                    { data: 'id', name: 'Id' },
                    { data: 'name', name: 'Name' },
                    { data: 'description', name: 'Description' },
                    { data: 'createdAt', name: 'CreatedAt' },
                    {
                        data: 'isActive',
                        name: 'IsActive',
                        orderable: false,
                        render: function (data) {
                            return data
                                ? `<span class="badge text-success-emphasis bg-success-subtle rounded-pill">Active</span>`
                                : `<span class="badge text-danger-emphasis bg-danger-subtle rounded-pill">Deactive</span>`;
                        }
                    },
                    {
                        data: null,
                        orderable: false,
                        render: function (data, type, row) {

                            const updateUrl = '@Url.Action("AddOrUpdate", "Role")' + '/' + row.id;

                            let updateBtn = `
                                <a href="${updateUrl}" class="btn btn-ghost btn-icon btn-sm rounded-circle texttooltip">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" stroke-width="1.5" stroke="currentColor" fill="none" viewBox="0 0 24 24">
                                        <path d="M0 0h24v24H0z" stroke="none"></path>
                                        <path d="M7 7h-1a2 2 0 0 0 -2 2v9a2 2 0 0 0 2 2h9a2 2 0 0 0 2 -2v-1"></path>
                                        <path d="M20.385 6.585a2.1 2.1 0 0 0 -2.97 -2.97l-8.415 8.385v3h3l8.385 -8.415z"></path>
                                        <path d="M16 5l3 3"></path>
                                    </svg>
                                </a>
                            `;

                            let viewBtn = "";
                            let deleteBtn = "";

                            if (row.isActive) {
                                viewBtn = `
                                    <button class="btn-view-model btn btn-ghost btn-icon btn-sm rounded-circle texttooltip" data-id="${row.id}">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" stroke-width="1.5" stroke="currentColor" fill="none" viewBox="0 0 24 24">
                                            <path d="M0 0h24v24H0z" stroke="none"></path>
                                            <path d="M10 12a2 2 0 1 0 4 0a2 2 0 0 0 -4 0"></path>
                                            <path d="M21 12c-2.4 4 -5.4 6 -9 6c-3.6 0 -6.6 -2 -9 -6c2.4 -4 5.4 -6 9 -6c3.6 0 6.6 2 9 6"></path>
                                        </svg>
                                    </button>
                                `;

                                deleteBtn = `
                                    <button class="btn-delete btn btn-ghost btn-icon btn-sm rounded-circle texttooltip" data-id="${row.id}">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" stroke-width="1.5" stroke="currentColor" fill="none" viewBox="0 0 24 24">
                                            <path d="M0 0h24v24H0z" stroke="none"></path>
                                            <path d="M4 7l16 0"></path>
                                            <path d="M10 11l0 6"></path>
                                            <path d="M14 11l0 6"></path>
                                            <path d="M5 7l1 12a2 2 0 0 0 2 2h8a2 2 0 0 0 2 -2l1 -12"></path>
                                            <path d="M9 7v-3a1 1 0 0 1 1 -1h4a1 1 0 0 1 1 1v3"></path>
                                        </svg>
                                    </button>
                                `;
                            }

                            return viewBtn + updateBtn + deleteBtn;
                        }
                    }
                ]
            });


            $("#searchBtn").on("click", function() {
                table.draw();
            });

             $("#referenceBtn").on("click", function() {
                 $("#searchInput").val("");
                 activeFilter = null;
                table.ajax.reload();
            });
        });

        // View Modal
        $(document).on("click", ".btn-view-model", function () {
            let id = $(this).data("id");
            $.get('@Url.Action("View", "Role")' + '/' + id, function (result) {
                $("#mainContent").html(result);
                $('#commonModals').modal('show');
            });
        });

        $(document).on("click", "#isActiveDropdown .dropdown-item", function () {
            activeFilter = $(this).data("active"); // true / false
            table.draw(); // Refresh table data
        });

        // Delete Role
        $(document).on("click", ".btn-delete", function () {
            let id = $(this).data("id");
            $.post('@Url.Action("Delete", "Role")' + '/' + id, function (result) {
                if (result) {
                    table.ajax.reload();
                }
            });
        });

 </script>
}

